# Provider: "moonshot" (Open Platform) or "code" (Kimi Code API)
KIMI_PROVIDER=moonshot

# Moonshot/Open Platform key (used when KIMI_PROVIDER=moonshot)
MOONSHOT_API_KEY=

# Kimi Code API key (used when KIMI_PROVIDER=code)
KIMI_CODE_API_KEY=

# Backward-compatible alias (optional; used if provider-specific key is empty)
KIMI_API_KEY=

# Optional overrides
KIMI_BASE_URL=
KIMI_CHAT_MODEL=
KIMI_EMBED_MODEL=
KIMI_USER_AGENT=
KIMI_ENABLE_EMBEDDINGS=
KIMI_TIMEOUT_MS=30000
OWN_SKILL_UPDATE_HOURS=24
SOUL_UPDATE_HOURS=24

# Optional encrypted secrets support:
# If `.env.secrets.enc` exists and SECRETS_PASSPHRASE is set, the bot will decrypt and load it.
SECRETS_FILE=.env.secrets.enc
SECRETS_PASSPHRASE=
TELEGRAM_BOT_TOKEN=
ALLOW_SHELL=false
ALLOW_SKILL_INSTALL=false
DATA_DIR=./data
DB_PATH=./db/agent.json
MAX_MESSAGES=200
RECENT_MESSAGES=40
